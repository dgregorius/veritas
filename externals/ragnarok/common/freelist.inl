//--------------------------------------------------------------------------------------------------
// RkFreelist 
//--------------------------------------------------------------------------------------------------
inline bool RkFreelist::Empty() const
	{
	return !mNext;
	}


//--------------------------------------------------------------------------------------------------
inline void* RkFreelist::Pop()
	{
	RK_ASSERT( mNext );
	RkFreelist* Head = mNext;
	mNext = Head->mNext;

	return Head;
	}


//--------------------------------------------------------------------------------------------------
inline void RkFreelist::Push( void* Block )
	{
	RK_ASSERT( Block );
	RkFreelist* Head = static_cast< RkFreelist* >( Block );
	Head->mNext = mNext;
	mNext = Head;
	}


//--------------------------------------------------------------------------------------------------
inline void RkFreelist::Reset()
	{
	mNext = nullptr;
	}